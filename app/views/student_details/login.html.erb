<div>
	<%= form_tag(:action=>'attempt_login') do %>
		<table>
			<tr>
				<th><%=label_tag(:roll_no)%></th>
				<td><%=text_field_tag(:roll_no)%></td>
			</tr>
			<tr>
				<th><%=label_tag(:password)%></th>
				<td><%=password_field_tag(:password)%></td>
			</tr>
		</table>
		<%=submit_tag("Login")%>
	<%end%>
</div>
